<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  android:id="@+id/active_alerts_list"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/black"
  android:orientation="vertical">

  <ProgressBar
    android:id="@+id/active_alerts_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:visibility="gone"/>

  <TextView
    android:id="@+id/no_active_alerts_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/no_active_alerts"
    android:textColor="@android:color/white"
    android:textSize="24sp"
    android:visibility="gone"/>

  <ListView
    android:id="@+id/active_alerts_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="#303030"
    android:dividerHeight="2dp">

  </ListView>

</LinearLayout>